<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/allbackground" >
    
    <!-- 标题栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height"
        android:background="@color/main_color" >

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/img_marginlight"
			android:padding="5dp"
			android:layout_alignParentLeft="true"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/gerenxinxi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人信息"
            android:textColor="@color/title_cocle"
            android:textSize="@dimen/title_size" />
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/head_img_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/tv_marginleft"
            />
        
         <com.yijiabao.view.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/head_image11"
            android:layout_width="@dimen/head_image_size_min"
            android:layout_height="@dimen/head_image_size_min"
            android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_margin="@dimen/tv_marginleft"            

            android:src="@drawable/head"
            app:border_color="@color/allbackground"
            app:border_width="2dp" />
        
    </RelativeLayout>
    
    <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height"
                android:background="@color/allbackground"
                />
    <RelativeLayout 
        android:id="@+id/myname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/tv_marginleft"
            />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小白"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/tv_marginleft"   
            />
        
    </RelativeLayout>
    
    <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height"
                android:background="@color/allbackground"
                />
    
    <RelativeLayout 
        android:id="@+id/sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/tv_marginleft"
            />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/tv_marginleft"   
            />
        
    </RelativeLayout>
    
        <RelativeLayout 
        android:id="@+id/change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/tv_marginleft"
            android:layout_marginTop="@dimen/tv_marginleft"  
            android:layout_marginBottom="@dimen/tv_marginleft"  
            />
        
        
        
    </RelativeLayout>
    
    
    

</LinearLayout>
